extends layout

block content
  .container
    h1 Upload Item

    if messages && messages.error && messages.error.length
      .alert.alert-danger #{messages.error[0]}

    if messages && messages.success && messages.success.length
      .alert.alert-success #{messages.success[0]}

    form(method='POST', action='/upload')
      .field
        label(for='name') Name
        input(type='text', name='name', required, value=(typeof name !== 'undefined' ? name : ''))

      .field
        label(for='description') Description
        textarea(name='description') #{typeof description !== 'undefined' ? description : ''}

      .field
        label(for='price') Price
        input(type='number', name='price', required, value=(typeof price !== 'undefined' ? price : ''))

      button(type='submit') Post