extends layout 
// ^^^ This is CRITICAL. It tells Jade to use the layout file.

block content
  .flex.justify-center.items-center.py-12
    .w-full.max-w-md.bg-white.p-8.rounded-lg.shadow-lg
      h1.text-3xl.font-bold.mb-6.text-center Login
      
      form(method='POST', action='/auth/login')
        .mb-4
          label.block.text-gray-700.text-sm.font-bold.mb-2(for='email') Email
          input#email.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight(type='email', name='email', required)
        
        .mb-6
          label.block.text-gray-700.text-sm.font-bold.mb-2(for='password') Password
          input#password.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.mb-3.leading-tight(type='password', name='password', required)

        .flex.items-center.justify-between
          button(type='submit', class='bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline') Sign In
          a(href='/auth/register', class='inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800') Need an account?